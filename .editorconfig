# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
continuation_indent_size = 4
insert_final_newline = true

# tab indentation
[Makefile]
indent_style = tab

# 2 space indentation
[*.{xml,html,json,yml,md}]
indent_style = space
indent_size = 2

